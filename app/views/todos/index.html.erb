<%= turbo_include_tags %>

<h1>Todos</h1>

<ul>
    <% @todos.each do |todo| %>
        <li>
            <input type="checkbox">
                <%= link_to todo.task, todo %>
            </input>
            <%= link_to "Edit", edit_todo_path(todo) %>
            <%= link_to "Delete", todo_path(todo), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                } %>
        </li>
    <% end %>
</ul>

<%= link_to "Create Todo", new_todo_path(@todo) %>